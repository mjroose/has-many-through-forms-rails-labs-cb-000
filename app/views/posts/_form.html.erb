<h1>New Post Form</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  
  <%= f.fields_for :categories do |cat| %>
    <%= cat.label :name %><br>
    <%= cat.text_field :name %><br>
  <% end %><br>

  <%= f.submit %>
<% end %>